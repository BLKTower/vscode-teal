{
    "name": "vscode-tl",
    "displayName": "vscode-tl",
    "description": "TL language support for Visual Studio Code",
    "version": "0.0.1",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/pdesaulniers/vscode-tl.git"
    },
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/client/extension",
    "activationEvents": [
        "onLanguage:tl"
    ],
    "publisher": "pdesaulniers",
    "contributes": {
        "languages": [
            {
                "id": "tl",
                "aliases": [
                    "TL",
                    "tl"
                ],
                "extensions": [
                    ".tl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tl",
                "scopeName": "source.tl",
                "path": "./syntaxes/tl.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "@types/tmp": "^0.1.0",
        "tmp-promise": "^2.0.2",
        "vscode-languageclient": "^6.1.1",
        "vscode-languageserver": "^6.1.1",
        "vscode-languageserver-textdocument": "^1.0.1"
    },
    "devDependencies": {
        "vscode": "^1.1.36"
    },
    "scripts": {
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    }
}
